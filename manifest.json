{
  "manifest_version": 2,
  "name": "Github Project Schedule",
  "version": "0.0.1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/projects/*",
        "https://github.com/*/*/issues/*"
      ],
      "css": [
        "flatpickr-material-red.css"
      ],
      "js": [
        "app_extention.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}